{
  "name": "the-docs",
  "version": "0.1.2-beta",
  "description": "TheDocs is an open source program that allows you to document problems that you run into on everyday tasks, development project, even a chemical procedure.",
  "main": "app.js",
  "author": "Dylan Bulmer",
  "os": [ "Windows", "Mac OS" ],
  "repository": "https://github.com/DylanBulmer/TheDocs",
  "url": "https://github.com/DylanBulmer/TheDocs/issues",
  "email": "piggahbro@gmail.com",
  "license": "CC-BY-SA-4.0",
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^2.20.1",
    "highlight.js": "^9.12.0",
    "markdown-it": "^8.4.0"
  },
  "devDependencies": {
    "electron-builder": "^19.55.3",
    "electron": "^1.8.1"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "DylanBulmer",
        "repo": "TheDocs"
      }
    ],
    "appId": "com.github.dylanbulmer.thedocs",
    "productName": "The Docs",
    "mac": {
      "category": "public.app-category.Reference",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "scripts": {
    "publish": "build --win -p always",
    "build": "build --win"
  }
}
