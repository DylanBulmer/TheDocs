extends layout.pug

block links
    link(rel="stylesheet" href="../css/app.css")
    link(rel="stylesheet" href="../css/project.css")
    link(rel="stylesheet" href="../css/markdown.css")

block content
    include modules/topbar.pug
    include modules/nav.pug
    aside
        tabs#dump
        a(class="add-button" onclick="viewPage('c_newProject')") Start a Project!
    content#c_main
        h1 View the status of your projects!
        br
        p Click the project you would like to view on the left!
        br
        p
            i Please note that this page is still being developed and not everything will work correctly.
    content#c_view
        span.column(style="width: calc(100% - 390px);")
            h1(style="width: 100%; display: inline-block;")#p_title
            br
            span(style="width: 100%") Started on&nbsp;
                span#p_date
            table
                tbody
                    tr
                        td Definition:
                        td#p_desc
                    tr
                        td Homepage:
                        td
                            a(target="_BLANK")#p_homepage
        span#col
            div#options
                | Project options
                a#join_btn Join
            div#todo
                subtitle(style="margin-top: 0;") Todo list
                todo
        span(style="width: 330px; display: inline-block; vertical-align: text-top; margin: 10px; position: absolute; top: 10px; right: 10px; max-height: calc(100% - 20px);")#container
            subtitle(style="width: calc(100% - 20px); text-align: center; margin-top: 0;") Event Log
            div(style="min-height: 400px; height: calc(100vh - 2em - 120px);")#eventlog
    content#c_newProject
        span.desc Name:
        input(type="text" placeholder="Project Name").field#n_name
        br
        span.desc Homepage:
        input(type="text" placeholder="Domain name/URL: (optional)" onchange="testRegEx(this)" pattern="(http(s)?:\\/\\/.)?(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{2,256}\\.[a-z]{2,6}\\b([-a-zA-Z0-9@:%_\\+.~#?&//=]*)").field#n_url
        br
        span(style="padding: 0 130px; display: block; color: red;")#regExpError
        span.desc Definition:
        textarea(rows="4" placeholder="What is the definition or conception of this project? (optional, recommended)").field#n_desc
        br
        span(style="display: block; color: red; text-align: right; padding: 10px; transition: 100ms;")#submitErr
        a(onclick="submitProject()").p_btn Submit
    script(src="../js/pageViewer.js")
    script(src="../js/regexTester.js")
    script(src="../js/projects.js")
    script(src="../js/submit.js")
    script(src='../js/user-preferences.js')
